@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="container-fluid my-5">
	<div class="row justify-content-center">
		<div class="col-md-4">
			<h1><center><b>Forgotten Password</b></center></h1>
			<hr>
			<div id="forgt_back_message"></div>
			<form method="post" onsubmit="return false">
				<div class="row">
					<div class="col-md-12">
						<div class="form-floating my-3">
							<input type="text" id="email" asp-form="Input.Email" class="form-control" placeholder="Enter Email" required>
							<label asp-for="Input.Email">Email</label>
							<span asp-validation-for="Input.Email" class="text-danger"></span>
						</div>
					</div>
				</div>
				<hr>
				<div class="d-grid">
					<input value="submit" type="button" id="forgott" name="Submit" class="btn btn-success btn-lg">
				</div>
				<p class="pt-2 text-center"><a class="py-0 my-0" id="forgot-password" asp-page="./Login" style="color:#333; list-style:none;">Login</a></p>
			</form>
		</div>
	</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
