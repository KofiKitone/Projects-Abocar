@page
@model Abocar.Areas.Identity.Pages.Account.Manage.AddressModel
@{
    ViewData["Title"] = "Address";
    ViewData["ActivePage"] = ManageNavPages.Address;
   
}


<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="container mt-4 align-content-center">
    <h1 class="mb-4">Address</h1>
    <form id="address-form" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col d-block "></div>
            <div class="col-xl-7">
                <!-- Account details card-->
                <div class="card mb-4">
                    <div class="card-header">Address</div>
                    <div class="card-body">
                        <!-- Form Group (username)-->
                        <div class="mb-3">
                            <label class="small mb-1" asp-for="Input.AddressLine">Address Line</label>
                            <input class="form-control" id="inputUsername" type="text" placeholder="Enter Address Line" asp-for="Input.AddressLine" >
                            <span asp-validation-for="Input.AddressLine" class="text-danger"></span>
                        </div>
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (first name)-->
                            <div class="col-md-6">
                                <label class="small mb-1" asp-for="Input.StreetNumber">Street Number</label>
                                <input class="form-control" id="inputFirstName" type="text" placeholder="Enter your Street Number" asp-for="Input.StreetNumber">
                                <span asp-validation-for="Input.StreetNumber" class="text-danger"></span>
                            </div>
                            <!-- Form Group (last name)-->
                            <div class="col-md-6">
                                <label class="small mb-1" asp-for="Input.PostalCods">Postal Code</label>
                                <input class="form-control" id="inputLastName" type="text" placeholder="Enter your Postal Code" asp-for="Input.PostalCods">
                                <span asp-validation-for="Input.PostalCods" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- Form Row        -->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (birthday)-->
                            <div class="col-md-6">
                                <label class="small mb-1" asp-for="Input.DigitalAddress">Digital Address</label>
                                <input class="form-control" id="inputBirthday" type="text" placeholder="Enter your Digital Address" asp-for="Input.DigitalAddress">
                                <span asp-validation-for="Input.DigitalAddress" class="text-danger"></span>
                            </div>
                            <!-- Form Group (location)-->
                            <div class="col-md-6">
                                <label class="small mb-1" asp-for="Input.City">City</label>
                                <input class="form-control" id="inputLocation" type="text" placeholder="Select your City" asp-for="Input.City">
                                <span asp-validation-for="Input.City" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- Form Group (email address)-->
                        <div class="mb-3">
                            <label class="small mb-1" asp-for="Input.Region">Region</label>
                            <input class="form-control" id="inputEmailAddress" type="text" placeholder="Enter your Region" asp-for="Input.Region" >
                            <span asp-validation-for="Input.Region" class="text-danger"></span>
                        </div>
                        <!-- Form Row-->
                        <!-- Save changes button-->
                        <div class="d-flex justify-content-between ">
                            
                            @if (TempData["RouteBackToCart"] as string == "Yes")
                            {
                                <button id="address-profile-button" type="submit" class="btn btn-default button" asp-route-data="FromCart">Save</button>
                                <a class="btn btn-outline-secondary " asp-area="Identity" asp-page="/Account/Manage/Cart">Cancel</a>
                            }
                            else 
                            {
                                <button id="address-profile-button" type="submit" class="btn btn-default button">Save</button>
                            }
                        </div>
                        
                    </div>
                </div>
            </div>
            <div class="col d-block "></div>
        </div>
    </form>

</div>






@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}