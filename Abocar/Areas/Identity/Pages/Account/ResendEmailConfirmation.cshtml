@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}

<div class="container-fluid my-5">
	<div class="row justify-content-center">
		<div class="col-md-4">
			<h1><center><b>Resend Email Confirmation</b></center></h1>
			<hr>
			<div id="forgt_back_message"></div>
			<form method="post">
				<div class="row">
					<div class="col-md-12">
						<div class="form-floating my-3">
							<input type="text" id="email" asp-form="Input.Email" class="form-control" placeholder="Enter Email" required>
							<label asp-for="Input.Email">Email</label>
							<span asp-validation-for="Input.Email" class="text-danger"></span>
						</div>
					</div>
				</div>
				<hr>
				<div class="d-grid">
					<button type="submit" class="w-100 btn btn-lg btn-success">Resend</button>
				</div>
				<p class="pt-2 text-center"><a class="py-0 my-0" asp-page="./Login" style="color:#333; list-style:none;">Login</a></p>
			</form>
		</div>
	</div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
