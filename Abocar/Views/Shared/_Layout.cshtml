 <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Abocar | @ViewData["Title"]</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="shortcut icon" type="image/x-icon" href="~/img/favicon.ico">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/plugins.css">
    <link rel="stylesheet" href="~/css/style.css">
    <script src="~/B/js/jquery2.js"></script>
    

</head>
<body> 
    <header>
        <div class="main-navbar shadow-sm sticky-top">
            <div class="top-navbar">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-2 my-auto d-none d-sm-none d-md-block d-lg-block">
                            <h5 class="brand-name"><a asp-action="Index" asp-controller="Home" style="color: white; font-size: 3em; font-weight: bold;"><img src="~/img/logo/1st abocar logo.png" class="ms-3 pt-2" /></a></h5>
                        </div>
                        <div class="col-md-5 my-auto">
                            <form asp-action="HomePage" asp-controller="Home">
                                <div class="input-group">
                                    <input type="search" name="searchString" placeholder="Search your product" class="form-control" />
                                    <button class="btn bg-white" type="submit">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-5 my-auto">
                            <ul class="nav justify-content-end">
                                @await Component.InvokeAsync("CartWishlist")
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="true">
                                        <i class="fa fa-user"></i>
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <partial name="_LoginPartial" />
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <nav class="navbar navbar-expand-lg">
                <div class="container-fluid">
                    <a class="navbar-brand d-block d-sm-block d-md-none d-lg-none" asp-action="Index" asp-controller="Home"> 
                        <img src="~/img/logo/1st abocar logo.png" style="height:40px" class="ms-3 pt-2" /> Abocar
                    </a> 
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="fa fa-bars"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" asp-action="HomePage" asp-controller="Home">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Privacy" asp-controller="Home" asp-route-data="Privacy">Privacy</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Privacy" asp-controller="Home" asp-route-data="About">About</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </header>

    <div class="container-fluid mx-0 px-0">
        <main role="main" class="pb-3">
            @await Html.PartialAsync("_Notifications")
            @RenderBody()
            
        </main>
    </div
    
    

    <!-- Footer -->
    <section id="footer">
        <div class="container">
            <div class="row text-center text-xs-center text-sm-left text-md-left">
                <div class="col-xs-12 col-sm-3 col-md-3">
                    <h5>Quick links</h5>
                    <ul class="list-unstyled quick-links">
                        <li><a asp-action="HomePage" asp-controller="Home"><i class="fa fa-angle-double-right"></i>Home</a></li>
                        <li><a asp-action="HomePage" asp-controller="Home" asp-route-searchString="All"><i class="fa fa-angle-double-right"></i>All Products</a></li>
                        <li><a asp-action="Privacy" asp-controller="Home" asp-route-data="About"><i class="fa fa-angle-double-right"></i>About</a></li>
                        <li><a asp-action="Privacy" asp-controller="Home" asp-route-data="Privacy"><i class="fa fa-angle-double-right"></i>Privacy</a></li>
                        <li><a asp-action="HomePage" asp-controller="Home" asp-route-searchString="All"><i class="fa fa-angle-double-right"></i>All Products</a></li>
                    </ul>
                </div>
                <div class="col-xs-12 col-sm-4 col-md-4">
                    <h5>Contact Us</h5>
                    <ul class="list-unstyled quick-links">
                        <li><a href="#"><i class="fa fa-angle-double-right"></i>Abossey Okai, Accra, Ghana</a></li>
                        <li><a href="mailto:abocar.shop@gmail.com"><i class="fa fa-angle-double-right"></i>abocar.shop@gmail.com</a></li>
                        <li><a href="https://wa.me/233550292531"><i class="fa fa-angle-double-right"></i>Send A WhatsApp</a></li>
                        <li><a href="tel:+233550292531"><i class="fa fa-angle-double-right"></i>Call Us</a></li>
                    </ul>

                </div>
                <div class="col-xs-12 col-sm-5 col-md-5">
                    <div class="container">
                      <div class="row w-100">
                        <h5 class="text-start">Voice your concerns</h5>
                        <div class="col">
                          <form role="form" asp-action="sendMail" asp-controller="Home">
                            <div class="form-group my-2">
                              <input class="form-control" name="Name" type="text" placeholder="Name" required>
                            </div> <!-- /Form-name -->

                            <div class="form-group my-2">
                              <input class="form-control" name="Email" type="email" placeholder="Email" required>
                            </div> <!-- /Form-email -->

                            <div class="form-group my-2">
                              <textarea class="form-control"  name="Message" Placeholder="Message" rows="5"></textarea>
                            </div> <!-- /col -->

                            <div class="row">            
                              <div class="col-xs-12 text-start">
                                <button type="submit" class="btn btn-primary btn-shadow btn-rounded w-md" >Submit</button>
                              </div> <!-- /col -->
                            </div> <!-- /row -->

                          </form> <!-- /form -->
                        </div> <!-- end col -->

                      </div> <!-- end row -->
          
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 mt-2 mt-sm-5">
                    <ul class="list-unstyled list-inline social text-center">
                        <li class="list-inline-item"><a href="javascript:void();"><i class="fa fa-facebook"></i></a></li>
                        <li class="list-inline-item"><a href="javascript:void();"><i class="fa fa-twitter"></i></a></li>
                        <li class="list-inline-item"><a href="javascript:void();"><i class="fa fa-instagram"></i></a></li>
                        <li class="list-inline-item"><a href="javascript:void();"><i class="fa fa-google-plus"></i></a></li>
                        <li class="list-inline-item"><a href="javascript:void();" target="_blank"><i class="fa fa-envelope"></i></a></li>
                    </ul>
                </div>
                </hr>
            </div>
        </div>
    </section>
    <!-- ./Footer -->



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/qrcode.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            // Automatically hide notifications after 5 seconds
            setTimeout(function () {
                $("#notification-container .alert").fadeOut('slow');
            }, 5000);
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
