@{
    var Model = ViewData["YesUser"] as ApplicationUser;
    if (Model != null)
    {
        <div class="container-fluid p-0 mb-4 ">
            <div class="row p-0 d-flex justify-content-center">
                <div class="col-md-3 col-lg-3 d-flex justify-content-center">
                    <img src="~/@Model.ImagePath" class="img-fluid border" alt="@Model.FirstName" style="width:100%; border-radius:10px" />
                </div>
                <div class="col-md-8 col-lg-8 card m-0 p-4 d-flex justify-content-between" style="border-radius:10px">
                    <div class="container-flud px-0 mx-0">
                        <div class="row border-bottom">
                            <div class="col-10 d-flex justify-content-start align-items-center"><h2 class="">@Model.FirstName @Model.LastName</h2></div>
                            <div class="col d-flex justify-content-end align-items-center w-100"><button class="btn btn-outline-secondary  btn-sm" onclick="closeUserView()">Close</button></div>
                        </div>
                    </div>
                    <div class="container-fluid px-1">
                        <div class="row">
                            <div class="col-8 ps-3">
                                <p class="lead mb-1">Email: <strong>@Model.Email</strong></p>
                                <p class="lead my-1">Phone: <strong>@Model.PhoneNumber</strong></p>
                                <p class="lead my-1">Nationality: <strong>@Model.Nationaltiy</strong></p>
                                <p class="lead my-1">Confirmed: @if (Model.EmailConfirmed){ <strong>Yes</strong> } else { <strong>No</strong> } </p>
                                <p class="lead my-1">2Factor Enabled: @if (Model.TwoFactorEnabled) { <strong>Yes</strong> } else { <strong>No</strong> } </p>
                            </div>
                            <div class="col">
                                <p class="lead my-1">Address: @if (Model.EmailConfirmed) { <strong>Yes</strong> } else { <strong>No</strong> } </p>
                                <p class="lead my-1">Purchases: <strong>@Model.PhoneNumber</strong></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}

