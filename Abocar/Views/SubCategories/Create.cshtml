@model Abocar.Models.SubCategory

@{
    ViewData["Title"] = "Create";
}

@if (TempData["subCategory"] as string == "yes")
{
    <div class="container-fluid px-4 d-flex justify-content-center align-items-center" style="height: 80vh;">
        <div class="card w-100 p-3" style="max-width: 600px;">
            <h3 class="p-2 border-bottom">Add Category</h3>
            <div class="col">
                <form asp-action="Create" asp-controller="SubCategories">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Name" class="form-control" placeholder="Name" required />
                        <label class="control-label">Name</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Description" class="form-control" placeholder="Address Line " required />
                        <label class="control-label">Address Line </label>
                    </div>
                    <div class="">
                        <button class="btn btn-primary">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
else if (TempData["brand"] as  string == "yes")
{
    <div class="container-fluid px-4 d-flex justify-content-center align-items-center" style="height: 80vh;">
        <div class="card w-100 p-3" style="max-width: 600px;">
            <h3 class="p-2 border-bottom">Add Category</h3>
            <div class="col">
                <form asp-action="CreateBrand" asp-controller="SubCategories">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="form-floating mb-3">
                        <input name="name" class="form-control" placeholder="Name" required />
                        <label class="control-label">Name</label>
                    </div>
                    <div class="">
                        <button class="btn btn-primary">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
